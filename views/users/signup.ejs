<%-include('../layouts/header')%>
  <!-- -------------------------------------------------------------------------------------------- -->
<div class="container-fluid custom-container-fluid">
  <!-- header section starts -->
  <header class="header_section">
    <nav class="navbar navbar-expand-lg navbar-light ">
      <div class="container">
        <!-- Centered Logo -->
        <a class="navbar-brand mx-auto" href="/">
          <img src="https://i.postimg.cc/fb0nGB6G/logo-test.png" style="max-width: 15rem;" alt="Logo">
        </a>
      </div>
    </nav>

    <section class="vh-100">
      <div class="container h-100">
        <div class="row d-flex justify-content-center mt-5 h-100">
          <div class="col-md-6">
            <div class="signup-box border border-dark p-5 rounded">
              <h1 class="pb-3 text-left reg-head">Register User</h1>
              <!-- action="/" method="post" -->
              <form action="/register" onsubmit="return validateForm()"  id="signupForm"  method="post"  >

                <!-- Full Name input -->
                <div class="form-group mb-4 ">
                  <div>
                     <label class="labels" for="name ">Full Name</label>
                    <input type="text" id="name" name="name" class="form-control border-dark white-black curved mx-auto " style="width: 80%;" placeholder="Enter your full name" />
                  </div>
                 
                  <div class="error" id="nameErr"></div>
                </div>

                <!-- Phone No input -->
                <div class="form-group mb-4">
                  <label class="labels" for="mobile">Phone No</label>
                  <input type="text" id="mobile" name="mobile" class="form-control border-dark white-black curved mx-auto" style="width: 80%;" placeholder="Enter your phone number" maxlength="10" />
                  <div class="error" id="mobileErr"></div>
                </div>

                <!-- Email input -->
                <div class="form-group mb-4">
                  <label class="labels" for="email">Email Address</label>
                  <input type="text" id="email" name="email" class="form-control border-dark white-black curved mx-auto" style="width: 80%;" placeholder="Enter your email address" />
                  <div class="error" id="emailErr"></div>
                </div>

                <!-- Password input -->
                <div class="form-group mb-4">
                  <label class="labels" for="password">Password</label>
                  <input type="password" id="password" name="password" class="form-control border-dark white-black curved mx-auto" style="width: 80%;" placeholder="Enter your password" />
                  <div class="error" id="passErr"></div>
                </div>

                <!-- Confirm Password input -->
                <div class="form-group mb-4">
                  <label class="labels" for="cPassword">Confirm Password</label>
                  <input type="password" id="cPassword" name="cPassword" class="form-control border-dark white-black curved mx-auto" style="width: 80%;" placeholder="Confirm your password" />
                  <div class="error" id="cPassErr"></div>
                </div>

                <div class="d-flex justify-content-around align-items-center mb-4">
                  <p class="labels">Already have an account? <a href="/login">Sign in</a></p>
                </div>

                <div class="text-center">
                  <!-- EJS syntax to display a variable -->
                  <!-- Submit button -->
                  <button type="submit" class="btn btn-block border-dark btn-blue mb-4 curved" value="submit" style="width: 40%;">Register</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>
  </header>
</div>

  <!-- -------------------------------------------------------------------------------------------- -->

  <%-include('../layouts/footer')%>