<%-include('../layouts/header')%>

<div class="container-fluid custom-container-fluid">
  <header class="header_section">
    <nav class="navbar navbar-expand-lg navbar-light">
      <!-- Your header content here -->
    </nav>
  </header>

  <section class="vh-100">
    <div class="container h-100">
      <div class="row d-flex align-items-center justify-content-center h-100">
        <div class="col-md-6">
          <form action="/otpVerify" method="get">
            <div class="text-center">
              <h1 class="font-weight-bold">Enter your OTP</h1>
            </div>

            <!-- OTP input -->
            <div class="form-group">
              <input type="text" id="otp" name="otp" class="form-control border-dark white-black curved mx-auto"
                placeholder="Please enter the OTP" maxlength="6" required />
              <div class="error text-center" id="otpErr"></div>
            </div>

            <!-- Go back links -->
            <div class="text-center mt-3">
              <h6>Edit your number? <a href="/otp">Go back</a></h6>
              <h6>Edit your Email? <a href="/forgotPassword">Go back</a></h6>
            </div>

            <!-- Submit button -->
            <div class="text-center mt-4">
              <button type="submit" class="btn btn-block btn-warning border-dark curved" style="width: 40%;">Verify OTP</button>
            </div>
          </form>

          <!-- Resend OTP button with countdown timer script -->
          <div class="text-center mt-4">
            <span id="verifiBtn">
              <button disabled="true" class="btn btn-success border-dark curved" style="width: 40%;">
                Resend OTP in <span class="timer"></span><span id="counter"></span>
              </button>
              
            </span>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

<script>
  function countdown() {
    let seconds = 59;
    function tick() {
      let counter = document.getElementById("counter");
      seconds--;
      counter.innerHTML =
        "0:" + (seconds < 10 ? "0" : "") + String(seconds);
      if (seconds > 0) {
        setTimeout(tick, 1000);
      } else {
        // Change the button style here
        const resendBtn = document.getElementById("verifiBtn");
        resendBtn.innerHTML = `
          <button type="submit" class="btn btn-primary btn-block border-dark curved" onclick="location.reload()" style="width: 40%;">Resend OTP</button>
        `;
        document.getElementById("counter").innerHTML = "";
      }
    }
    tick();
  }
  countdown();
</script>

<%-include('../layouts/footer')%>
