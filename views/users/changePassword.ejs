<%-include('../layouts/header')%>

<div class="container-fluid custom-container-fluid">
  <header class="header_section">
    <nav class="navbar navbar-expand-lg navbar-light">
      <div class="container">
        <!-- Centered Logo -->
        <a class="navbar-brand mx-auto" href="/">
          <img src="https://i.postimg.cc/BZNcVBfb/logo-test.png" style="max-width: 15rem;" alt="Logo">
        </a>
      </div>
    </nav>
  </header>

  <section class="vh-100">
    <div class="container h-100">
      <div class="row d-flex align-items-center justify-content-center h-75">
        <div class="col-md-6">
          <div class=" border border-dark p-5 rounded">
            <h1 class="pb-3 text-left reg-head">Change Password</h1>

            <!-- Mobile input -->
            <form action="/verifyPassword" onsubmit="return signupValidate()" method="post">
              <div class="form-group mb-4">
                <input type="password" id="password" name="password" 
                  class="form-control border-dark white-black curved mx-auto" value=""
                  placeholder="Enter the new password" style="width: 80%; letter-spacing: 0.3rem;">
                <div class="error text-center" id="passwordErr"></div>
              </div>

              <div class="form-group mb-4">
                <input type="password" id="cPassword" name="cPassword" 
                  class="form-control border-dark white-black curved mx-auto" value=""
                  placeholder="Re-enter the password" style="width: 80%; letter-spacing: 0.3rem;">
                <div class="error text-center" id="cPasswordErr"></div>
              </div>

              <h5 class="text-danger text-center"><%= message %></h5>

              <!-- Go back link -->
              <div class="text-center mt-3">
                <h6 class="labels">Want to go home? <a href="/user_home">Go back</a></h6>
              </div>

              <!-- Submit button -->
              <div class="text-center mt-4">
                <button type="submit" class="btn btn-block btn-blue border-dark curved" style="width: 40%;">Update Password</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

<%-include('../layouts/footer')%>
