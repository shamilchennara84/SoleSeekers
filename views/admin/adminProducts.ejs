<%- include('../layouts/adminHeader') %>

<section class="vh-100">
  <div class="container h-75">
    <div class="row d-flex align-items-center justify-content-center h-75">

      <div class="col-md-12 col-lg-12 col-xl-12">
        <h1 class="mt-5">Products</h1>
        <% if (typeof adminMessage !== 'undefined') { %>
        <h5 class="text-danger text-center "><%= adminMessage %></h5>
        <% } %>
        <a href="/admin/products/add" class="btn btn-primary mb-3">Add Product</a>
        <form class="d-flex flex-row justify-content-end mt-5" action="/admin/products/search" method="post">
          <input type="text" name="productsearch" class="form-control w-25" placeholder="Search">
          <input type="submit" class="btn ms-2 btn-dark" value="submit">
        </form>

        <div class="container mt-5 table-responsive">
          <table class="table table-striped" id="myTable">
            <thead>
              <tr>
                <th>#</th>
                <th>Product name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Stock</th>
                <th>Category</th>
                <th>img 1</th>
                <th>img 2</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% products.forEach(function(product, index) { %>
              <tr>
                <th><%= index + 1 %></th>
                <td><%= product.productName %></td>
                <td><%= product.price %></td>
                <td style="max-width: 190px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                  <%= product.description %></td>
                <td><%= product.stock %></td>
                <td><%= product.category.category%></td>
                <td><img src="/images/<%= product.img1 %>" class="img-fluid product-image-admin" style="max-width:5rem;height:auto"></td>
                <td><img src="/images/<%= product.img2 %>" class="img-fluid product-image-admin" style="max-width:5rem;height:auto"></td>
                <td>
                  <a href="/admin/products/edit?id=<%= product._id %>" class="mt-1 btn btn-primary">Edit</a>
                  <a onclick="Delete('<%= product._id %>')" data-bs-toggle="modal" data-bs-target="#deleteBut"
                    class="mt-1 btn btn-danger">Delete</a>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>

      </div>
    </div>
  </div>
</section>

<%- include('../layouts/footer') %>

<div class="modal fade" id="deleteBut" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
  aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Delete</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to Delete this order?
        <input type="hidden" id="deleteID">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button class="btn btn-danger mt-1 mb-1" onclick='return confirmDelete()' id="delete-Button">Delete</button>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready( function () {
    $('#myTable').DataTable();
  });
  
  function Delete(data) {
    document.getElementById('deleteID').value = data;
  }
  function confirmDelete() {
    const id = document.getElementById("deleteID").value;
    console.log(id);
    fetch("/admin/products/delete", {
      method: "POST",
      headers: {
        "Content-Type": "application/json"
      },
      body: JSON.stringify({
        id: id
      })
    })
    .then(response => {
      $('#deleteBut').modal('hide');
      console.log(response);
    })
    .then(data => {
      location.reload();
    })
    .catch(error => {
      console.log(error);
    });
  };
</script>
