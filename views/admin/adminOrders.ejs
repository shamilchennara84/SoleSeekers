<%- include('../layouts/adminHeader') %>

<div class="container mt-2 table-responsive">
  <h1 class="mt-5">Orders</h1>
  <table id="myTable" class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Order ID</th>
        <th>Mobile</th>
        <th>Zip</th>
        <th>Total Bill</th>
        <th>Pay method</th>
        <th>Order Date</th>
        <th>Edit Status</th>
      </tr>
    </thead>
    <tbody>
      <% orders.forEach(function(order) { %>
      <tr>
        <td><%= order.address.name %></td>
        <td><%= order._id %></td>
        <td><%= order.address.mobile %></td>
        <td><%= order.address.zip %></td>
        <td style="font-weight: 700;">â‚¹ <%= order.orderBill %></td>
        <td><%= order.paymentMode %></td>
        <td style="max-width: 200px"><%= formatDate(order.orderDate) %></td>
        <td><a href="/admin/orders/status?id=<%= order._id %>"><button type="submit" class="btn btn-success">View Products</button></a></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>

<script>
  $(document).ready(function() {
    $('#myTable').DataTable();
  });
</script>


























